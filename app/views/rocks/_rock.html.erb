<div class="media">
  <div class="media-left">
    <%= link_to image_tag(rock.public_url, class: 'media-object'), rock.public_url, target: '_blank' %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= rock.location_found %></h4>
    <p class="media-heading"><%= rock.description %></p>
    <%= button_to "Delete", rock, method: :delete, data: { confirm: "Are you sure?" }%>
    <%= link_to("See More", rock_path(rock.id), class: "btn") %>
  </div>
</div>
