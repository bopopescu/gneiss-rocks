<%= form_for @rock do |f| %>
  <%= render 'shared/errors', object: @rock %>

  <div class="form-group">
    <%= f.label :location_found %>
    <%= f.text_field :location_found, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control'%>
  </div>

  <%= f.submit 'Create Rock', class: 'btn btn-primary' %>
<% end %>
